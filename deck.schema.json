{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "cards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "model": {
            "type": "string",
            "enum": ["basic", "cloze"]
          },
          "front": {
            "type": "string"
          },
          "back": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": [
              { "type": "string", "pattern": "^(a1|a2|b1)$" },
              { "type": "string", "pattern": "^[a-z0-9_]+$" }
            ]
          }
        },
        "required": ["model", "front", "back", "tags"]
      }
    }
  },
  "required": ["cards"]
}
