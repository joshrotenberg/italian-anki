{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "cards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "model": {
            "type": "string",
            "enum": [
              "basic",
              "cloze"
            ]
          },
          "front": {
            "type": "string"
          },
          "back": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "model",
          "front",
          "back",
          "tags"
        ]
      }
    }
  },
  "required": [
    "cards"
  ]
}